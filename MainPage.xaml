<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pordhubertquizy.MainPage"
             Background="#011627">
    <VerticalStackLayout VerticalOptions="Center" Margin="20" Spacing="20">
        <Entry 
            x:Name="p1" 
            TextColor="#efefef"
            Background="#aa77ff"
            FontSize="25"
            Placeholder="Player 1"
            />
        <Entry 
            x:Name="p2" 
            TextColor="#efefef"
            Background="#aa77ff"
            FontSize="25"
            Placeholder="Player 2"
            />

        <Button
            x:Name="begin"
            Background="#aa77ff" 
            Text="Zacznij" 
            TextColor="#efefef" 
            FontAttributes="Bold" 
            FontSize="30"
            Clicked="begin_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
