<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pordhubertquizy.playerturn"
             Title="playerturn"
             Background="#011627">
    <VerticalStackLayout VerticalOptions="Center" Spacing="20" Margin="30">
        <Label
            x:Name="playerName"
            Text="playername"
            TextColor="#efefef"
            HorizontalOptions="Center"
            FontSize="30"
           />
        <Button
            x:Name="playRound"
            Background="#aa77ff" 
            Text="Ok" 
            TextColor="#efefef" 
            FontAttributes="Bold" 
            FontSize="30"
            Clicked="playRound_Clicked"/>
    </VerticalStackLayout>
</ContentPage>