<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pordhubertquizy.question"
             Title="question"
             Background="#011627">
    <VerticalStackLayout>
        <Label 
            Text="Pytanie:"
            FontSize="20"
            TextColor="#efefef"/>


        <Button
            x:Name="answer"
            Background="#aa77ff" 
            Text="Answer" 
            TextColor="#efefef" 
            FontAttributes="Bold" 
            FontSize="30"
            Clicked="answer_Clicked"/>
    </VerticalStackLayout>
</ContentPage>